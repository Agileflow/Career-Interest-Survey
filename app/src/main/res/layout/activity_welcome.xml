<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".WelcomeActivity"
                                             tools:layout_editor_absoluteY="25dp">

    <ImageView
            android:id="@+id/logo_imv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/logo_desc"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/continue_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cis_launcher_black" />

    <Button
            android:id="@+id/continue_btn"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="292dp"
            android:layout_height="0dp"
            android:layout_marginBottom="152dp"
            android:background="@drawable/rounded_gradient"
            android:contentDescription="@string/continue_btn_desc"
            android:fontFamily="@font/roboto"
            android:text="@string/continue_btn_text"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>